{
  "suggest.minTriggerInputLength": 2,
  "python.linting.flake8Enabled": true,
  "xml.server.workDir": "~/.local/share/lsp4xml",
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh", "bash"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"]
    },
    "rust": {
      "command": "rls",
      "filetypes": ["rust"]
    }
  }
}
